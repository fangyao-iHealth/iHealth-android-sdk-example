<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ihealth.sdk.BG1S"
    tools:showIn="@layout/activity_bg1s">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_return"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_disconnect"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Disconnect" />

            <Button
                android:id="@+id/btn_get_idps"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Get IDPS" />

            <Button
                android:id="@+id/btn_get_device_info"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Get Device Info" />

            <Button
                android:id="@+id/btn_get_battery"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Get Battery" />

            <Button
                android:id="@+id/btn_set_unit"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Set Unit" />

            <Button
                android:id="@+id/btn_get_user_info"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Get User Info" />

            <Button
                android:id="@+id/btn_set_user_info"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Create/update UserInfo" />

            <Button
                android:id="@+id/btn_delete_user_info"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Delete user info" />

            <Button
                android:id="@+id/btn_specify_tourist_users"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Specify Tourist Users" />


            <Button
                android:id="@+id/btn_specify_online_users"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Specify Online Users" />

            <Button
                android:id="@+id/btn_get_Off_line_num"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Get Off Line Data Count" />

            <Button
                android:id="@+id/btn_get_Off_line_data"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Get Off Line Data" />

            <Button
                android:id="@+id/btn_delete_Off_line_data"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Delete Off Line Data" />

            <Button
                android:id="@+id/btn_get_anonymous_data_num"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Get Anonymous Data Count" />

            <Button
                android:id="@+id/btn_get_anonymous_data"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Get Anonymous Data" />

            <Button
                android:id="@+id/btn_delete_anonymous_data"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Delete Anonymous Data" />

            <Button
                android:id="@+id/btn_restore_factory_settings"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Restore factory settings" />


            <Button
                android:id="@+id/btn_query_device_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="queryDeviceInfo" />

            <Button
                android:id="@+id/btn_query_cloud_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="queryCloudInfo" />


            <Button
                android:id="@+id/btn_download_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="downloadFile" />

            <Button
                android:id="@+id/btn_stop_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="stopDownload" />


            <Button
                android:id="@+id/btn_start_upgrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="startUpgrade" />

            <Button
                android:id="@+id/btn_stop_upgrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="stopUpgrade" />


            <Button
                android:id="@+id/btn_isUpgrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="isUpgrade" />

            <Button
                android:id="@+id/btn_delete_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="deleteFile" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
